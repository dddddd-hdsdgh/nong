/* pages/search/index.wxss */

.search-container {
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 搜索栏 */
.search-header {
  background-color: white;
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #eee;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.search-btn {
  width: 120rpx;
  height: 70rpx;
  background-color: #4CAF50;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-btn-text {
  color: white;
  font-size: 28rpx;
  font-weight: 500;
}

/* 搜索建议 */
.search-suggestions {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.suggestion-section {
  margin-bottom: 40rpx;
}

.suggestion-section:last-child {
  margin-bottom: 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.clear-btn {
  font-size: 26rpx;
  color: #999;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.history-tag {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  height: 80vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  text-align: center;
  height: 80vh;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.error-text {
  color: #666;
  font-size: 30rpx;
  margin-bottom: 40rpx;
}

.retry-btn {
  background-color: #4CAF50;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 0;
  width: 200rpx;
  height: 80rpx;
}

/* 搜索结果 */
.search-results {
  background-color: #f8f8f8;
}

.result-header {
  background-color: white;
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #eee;
}

.result-count {
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  height: 60vh;
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  color: #999;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.empty-tip {
  color: #ccc;
  font-size: 26rpx;
}

/* 文章列表 */
.article-list {
  background-color: #f8f8f8;
}

.article-item {
  background-color: white;
  margin-bottom: 20rpx;
  padding: 30rpx;
  border-bottom: 2rpx solid #eee;
}

.article-content {
  display: flex;
  margin-bottom: 20rpx;
}

.article-info {
  flex: 1;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
}

.article-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-summary {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.category {
  color: #4CAF50;
}

.dot {
  margin: 0 10rpx;
}

.article-cover {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.article-action {
  display: flex;
  justify-content: flex-end;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.action-icon {
  width: 36rpx;
  height: 36rpx;
}

.action-text {
  font-size: 24rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.loading-small-spinner {
  width: 36rpx;
  height: 36rpx;
  border: 3rpx solid #f3f3f3;
  border-top: 3rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 15rpx;
}

.load-more-text {
  color: #999;
  font-size: 26rpx;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 30rpx 0;
}

.no-more-text {
  color: #ccc;
  font-size: 26rpx;
}

