.detail-container {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 帖子详情区域 */
.post-detail {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.post-time {
  font-size: 26rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

.follow-btn {
  background-color: #4CAF50;
  color: white;
  font-size: 28rpx;
  padding: 0 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.followed-btn {
  background-color: #f0f0f0;
  color: #999;
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
}

.post-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.post-text {
  font-size: 32rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
  white-space: pre-wrap;
}

.post-images {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
  gap: 20rpx;
}

.post-img {
  width: calc((100% - 20rpx) / 2);
  aspect-ratio: 1;
  border-radius: 10rpx;
  object-fit: cover;
}

/* 优化单张图片显示 */
.post-images image:first-child:nth-last-child(1) {
  width: 100%;
  max-height: 400rpx;
  aspect-ratio: auto;
}

.post-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.post-tag {
  font-size: 28rpx;
  color: #4CAF50;
  background-color: #f0f9f0;
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
}

.post-stats {
  display: flex;
  align-items: center;
}

.stat-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #999;
}

.stat-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}

.post-actions {
  display: flex;
  justify-content: space-around;
  padding: 10rpx 0;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
  border-radius: 10rpx;
}

.action-item.active {
  color: #4CAF50;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 26rpx;
  color: #666;
}

.action-item.active .action-text {
  color: #4CAF50;
}

.action-count {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.action-item.active .action-count {
  color: #4CAF50;
}

.comment-section {
  background-color: white;
  padding: 30rpx;
}

.comment-header {
  margin-bottom: 30rpx;
}

.comment-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.comment-list {
  margin-bottom: 20rpx;
}

.comment-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-content {
  flex: 1;
}

.comment-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.comment-username {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.comment-text {
  font-size: 30rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 10rpx;
  white-space: pre-wrap;
}

.comment-actions {
  display: flex;
  align-items: center;
}

.comment-action {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  font-size: 24rpx;
  color: #999;
}

.comment-action.active {
  color: #4CAF50;
}

.comment-action-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}

.no-comments {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 30rpx;
}

.load-more {
  text-align: center;
  padding: 20rpx 0;
  color: #4CAF50;
  font-size: 28rpx;
}

.comment-input-area {
  position: sticky;
  bottom: 0;
  background-color: white;
  padding: 20rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 99;
}

.comment-input {
  flex: 1;
  height: 70rpx;
  border: 1rpx solid #ddd;
  border-radius: 35rpx;
  padding: 0 30rpx;
  margin-right: 20rpx;
  background-color: #f9f9f9;
  font-size: 28rpx;
}

.send-btn {
  background-color: #4CAF50;
  color: white;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 28rpx;
  border-radius: 35rpx;
  font-size: 28rpx;
  border: none;
}

.send-btn[disabled] {
  background-color: #ccc;
}

/* 响应式适配 */
/* 小屏设备优化 */
@media screen and (max-width: 320px) {
  .post-title {
    font-size: 36rpx;
  }
  
  .post-text {
    font-size: 30rpx;
  }
  
  .post-img {
    width: calc((100% - 15rpx) / 2);
    gap: 15rpx;
  }
  
  .post-detail,
  .comment-section {
    padding: 20rpx;
  }
}

/* 大屏设备优化 */
@media screen and (min-width: 400px) {
  .post-title {
    font-size: 44rpx;
  }
  
  .post-text {
    font-size: 34rpx;
  }
  
  .post-img {
    width: calc((100% - 25rpx) / 2);
    gap: 25rpx;
  }
  
  .post-images image:first-child:nth-last-child(1) {
    max-height: 500rpx;
  }
}