<view class="forum-container">
  <view class="forum-header">
    <text class="forum-title">农业论坛</text>
    <button class="post-btn" bindtap="goToPost">发布</button>
  </view>
  
  <view class="forum-tabs">
    <view class="tab-item {{currentTab === 'recommend' ? 'active' : ''}}" bindtap="switchTab" data-tab="recommend">推荐</view>
    <view class="tab-item {{currentTab === 'latest' ? 'active' : ''}}" bindtap="switchTab" data-tab="latest">最新</view>
    <view class="tab-item {{currentTab === 'hot' ? 'active' : ''}}" bindtap="switchTab" data-tab="hot">热门</view>
  </view>
  
  <view class="forum-list">
    <block wx:for="{{forumList}}" wx:key="id">
      <view class="post-item" bindtap="goToDetail" data-id="{{item.id}}">
        <view class="post-header">
          <image class="avatar" src="{{item.avatar || '/static/icons/default-avatar.png'}}" mode="aspectFill"></image>
          <view class="user-info">
            <text class="username">{{item.username}}</text>
            <text class="post-time">{{item.time}}</text>
          </view>
        </view>
        <view class="post-content">
          <text class="post-title">{{item.title}}</text>
          <text class="post-text">{{item.content}}</text>
          <view class="post-images" wx:if="{{item.images && item.images.length > 0}}">
            <image wx:for="{{item.images}}" wx:key="*this" wx:for-item="img" src="{{img}}" mode="aspectFill" class="post-img"></image>
          </view>
        </view>
        <view class="post-footer">
          <view class="post-tag">{{item.category}}</view>
          <view class="post-stats">
            <view class="stat-item">
              <image src="/static/icons/like.png" class="stat-icon"></image>
              <text class="stat-text">{{item.likes}}</text>
            </view>
            <view class="stat-item">
              <image src="/static/icons/comment.png" class="stat-icon"></image>
              <text class="stat-text">{{item.comments}}</text>
            </view>
            <view class="stat-item">
              <image src="/static/icons/view.png" class="stat-icon"></image>
              <text class="stat-text">{{item.views}}</text>
            </view>
          </view>
        </view>
      </view>
    </block>
    
    <view class="no-more" wx:if="{{forumList.length === 0}}">
      <text>暂无帖子</text>
    </view>
  </view>
  
  <view class="load-more" bindtap="loadMore" wx:if="{{hasMore}}">
    <text>加载更多</text>
  </view>
</view>