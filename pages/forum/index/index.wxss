/* 全局样式重置 */
page {
  background-color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  color: #333333;
}

.forum-container {
  background-color: #ffffff;
  min-height: 100vh;
  position: relative;
  padding-top: 0;
}

/* 顶部导航样式 */
.forum-header {
  background-color: #ffffff;
  color: #333333;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid #f0f0f0;
}

.forum-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 40rpx;
}

.search-icon,
.post-btn-top,
.more-icon,
.iconfont {
  font-size: 32rpx;
  color: #666666;
}

.post-btn-top {
  padding: 10rpx;
}

/* 分类标签样式 */
.forum-tabs {
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 90rpx;
  z-index: 90;
}

.error-banner {
  margin: 20rpx 30rpx;
  padding: 20rpx;
  background-color: #fff6e5;
  border: 1rpx solid #ffe0b3;
  border-radius: 12rpx;
  color: #b26b00;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
}

.retry-btn {
  margin: 0;
  background-color: #ffb347;
  color: #fff;
}

.tabs-container {
  display: flex;
  overflow-x: auto;
  white-space: nowrap;
  padding: 0 10rpx;
  -webkit-overflow-scrolling: touch;
}

.tabs-container::-webkit-scrollbar {
  display: none;
}

.tab-item {
  padding: 24rpx 30rpx;
  font-size: 32rpx;
  color: #666666;
  position: relative;
  flex-shrink: 0;
}

.tab-item.active {
  color: #FF6B6B;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #FF6B6B;
  border-radius: 3rpx;
}

.tab-icon {
  display: none;
}

/* 帖子列表样式 */
.forum-list {
  padding: 0;
  min-height: calc(100vh - 200rpx);
}

.post-card {
  background: white;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.post-card:active {
  background-color: #f8f8f8;
}

/* 用户信息区域 */
.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 4rpx;
}

.post-time {
  font-size: 24rpx;
  color: #999999;
}

.top-badge {
  background-color: #FF6B6B;
  color: white;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 15rpx;
}

/* 内容区域 */
.post-content {
  margin-bottom: 20rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 12rpx;
  display: block;
}

.post-text {
  font-size: 32rpx;
  color: #333333;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 图片展示 */
.post-images {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.post-img {
  width: calc((100% - 20rpx) / 3);
  aspect-ratio: 1;
  border-radius: 10rpx;
}

/* 底部标签和统计 */
.post-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.comment-area {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.comment-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.comment-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.comment-count {
  font-size: 26rpx;
  color: #777;
}

.comment-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
}

.comment-tip {
  font-size: 26rpx;
  color: #888;
  flex: 1;
}

.comment-btn {
  background-color: #4caf50;
  color: #fff;
  border: none;
}

.post-tags {
  flex: 1;
}

.post-tag {
  font-size: 26rpx;
  color: #999999;
}

.post-stats {
  display: flex;
  gap: 30rpx;
}

.stat-item {
  font-size: 26rpx;
  color: #999999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  display: block;
}

.empty-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #333;
}

.empty-subtitle {
  font-size: 28rpx;
  line-height: 1.5;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 0;
  color: #4CAF50;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.load-more:active {
  background-color: rgba(76, 175, 80, 0.1);
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
  color: #4caf50;
  gap: 20rpx;
}

.loading-text {
  font-size: 28rpx;
}

.comment-area,
.comment-info,
.comment-actions,
.comment-label,
.comment-count,
.comment-tip,
.comment-btn {
  display: none;
}

/* 底部导航栏 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: white;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 1000;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 20%;
  height: 100%;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 24rpx;
  color: #999999;
}

.tab-item.active .tab-text {
  color: #FF6B6B;
}

/* 发帖按钮 */
.post-btn {
  position: fixed;
  bottom: 140rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #FF6B6B;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.3);
  z-index: 999;
}

.post-btn:active {
  transform: scale(0.95);
}

.post-btn-icon {
  width: 56rpx;
  height: 56rpx;
}

/* 响应式适配 */
/* 针对不同屏幕尺寸的适配 */
.tab-item {
  padding: calc(15rpx + 2rpx) calc(20rpx + 2rpx);
  font-size: calc(28rpx + 2rpx);
}

/* 图片布局优化 */
.image-wrapper {
  position: relative;
  border-radius: 15rpx;
  overflow: hidden;
}

.image-wrapper:nth-child(1) {
  flex: 1;
  min-width: 260rpx;
  max-width: 100%;
  height: 240rpx;
}

.image-wrapper:nth-child(2),
.image-wrapper:nth-child(3) {
  width: calc(150rpx + 10rpx);
  height: calc(150rpx + 10rpx);
}

/* 小屏设备优化 */
@media screen and (max-width: 320px) {
  .tab-item {
    padding: 15rpx 18rpx;
    font-size: 28rpx;
  }
  
  .post-card {
    margin-bottom: 20rpx;
  }
  
  .image-wrapper:nth-child(1) {
    min-width: 240rpx;
    height: 220rpx;
  }
  
  .image-wrapper:nth-child(2),
  .image-wrapper:nth-child(3) {
    width: 140rpx;
    height: 140rpx;
  }
}

/* 大屏设备优化 */
@media screen and (min-width: 400px) {
  .tab-item {
    padding: 20rpx 32rpx;
    font-size: 32rpx;
  }
  
  .image-wrapper:nth-child(1) {
    height: 280rpx;
  }
  
  .image-wrapper:nth-child(2),
  .image-wrapper:nth-child(3) {
    width: 200rpx;
    height: 200rpx;
  }
}