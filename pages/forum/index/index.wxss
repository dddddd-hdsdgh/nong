.forum-container {
  background-color: #f8f8f8;
  min-height: 100vh;
}

.forum-header {
  background-color: #4CAF50;
  color: white;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.forum-title {
  font-size: 40rpx;
  font-weight: bold;
}

.post-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 60rpx;
}

.forum-tabs {
  display: flex;
  background-color: white;
  margin-top: 100rpx;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 25rpx 0;
  font-size: 32rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #4CAF50;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30%;
  width: 40%;
  height: 6rpx;
  background-color: #4CAF50;
  border-radius: 3rpx;
}

.forum-list {
  padding: 20rpx;
}

.post-item {
  background-color: white;
  margin-bottom: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.post-time {
  font-size: 26rpx;
  color: #999;
  margin-top: 6rpx;
  display: block;
}

.post-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 1.4;
}

.post-text {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.post-images {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.post-img {
  width: 220rpx;
  height: 220rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  border-radius: 10rpx;
}

.post-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.post-tag {
  font-size: 26rpx;
  color: #4CAF50;
  background-color: #f0f9f0;
  padding: 6rpx 20rpx;
  border-radius: 15rpx;
}

.post-stats {
  display: flex;
  align-items: center;
}

.stat-item {
  display: flex;
  align-items: center;
  margin-left: 40rpx;
  font-size: 28rpx;
  color: #999;
}

.stat-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}

.no-more {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 30rpx;
}

.load-more {
  text-align: center;
  padding: 30rpx 0;
  color: #4CAF50;
  font-size: 30rpx;
}

.load-more:active {
  background-color: #f0f9f0;
}