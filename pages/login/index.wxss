/* 登录页面样式 */
.login-container {
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  box-sizing: border-box;
}

/* Logo样式 */
.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 登录说明 */
.login-desc {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 60rpx;
}

/* 功能介绍 */
.features-container {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 100rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

/* 登录按钮 */
.login-button-container {
  width: 100%;
  margin-bottom: 40rpx;
}

.wechat-login-btn {
  background-color: #07C160;
  color: white;
  border-radius: 80rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  border: none;
  padding: 0;
}

.wechat-login-btn:active {
  opacity: 0.8;
}

.wechat-login-btn::after {
  border: none;
}

.wechat-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.login-btn-text {
  font-size: 36rpx;
  font-weight: 500;
}

/* 错误提示 */
.error-message {
  color: #FF4D4F;
  font-size: 28rpx;
  margin-bottom: 40rpx;
  text-align: center;
}

/* 隐私协议 */
.privacy-agreement {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  line-height: 1.5;
}

.link {
  color: #07C160;
  margin: 0 10rpx;
}

.link:active {
  opacity: 0.8;
}