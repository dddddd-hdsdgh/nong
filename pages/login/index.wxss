/* 登录页面样式 */
.login-container {
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  box-sizing: border-box;
}

/* Logo样式 */
.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 登录说明 */
.login-desc {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 60rpx;
}

/* 功能介绍 */
.features-container {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 100rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

/* 登录方式切换tab */
.login-type-tabs {
  display: flex;
  width: 100%;
  margin-bottom: 60rpx;
  background-color: #f5f5f5;
  border-radius: 80rpx;
  padding: 10rpx;
}

.login-type-tabs .tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 60rpx;
  font-size: 32rpx;
  color: #666;
}

.login-type-tabs .tab.active {
  background-color: #fff;
  color: #07C160;
  font-weight: 500;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 手机号登录表单 */
.phone-login-form {
  width: 100%;
  margin-bottom: 40rpx;
}

.input-group {
  display: flex;
  align-items: center;
  background-color: #f9f9f9;
  border-radius: 40rpx;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  height: 100rpx;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.input {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  color: #333;
}

.eye-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.eye-icon image {
  width: 40rpx;
  height: 40rpx;
}

/* 手机登录按钮 */
.phone-login-btn {
  background-color: #07C160;
  color: white;
  border-radius: 80rpx;
  height: 100rpx;
  font-size: 36rpx;
  border: none;
  padding: 0;
  margin-bottom: 30rpx;
}

.phone-login-btn:active {
  opacity: 0.8;
}

.phone-login-btn::after {
  border: none;
}

/* 登录操作 */
.login-actions {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.register-link {
  color: #07C160;
  font-size: 32rpx;
}

.forgot-password {
  color: #666;
  font-size: 32rpx;
}

/* 微信登录 */
.wechat-login-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-button-container {
  width: 100%;
  margin-bottom: 40rpx;
}

.wechat-login-btn {
  background-color: #07C160;
  color: white;
  border-radius: 80rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  border: none;
  padding: 0;
}

.wechat-login-btn:active {
  opacity: 0.8;
}

.wechat-login-btn::after {
  border: none;
}

.wechat-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.login-btn-text {
  font-size: 36rpx;
  font-weight: 500;
}

/* 错误提示 */
.error-message {
  color: #FF4D4F;
  font-size: 28rpx;
  margin-bottom: 40rpx;
  text-align: center;
}

/* 隐私协议 */
.privacy-agreement {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  line-height: 1.5;
}

.link {
  color: #07C160;
  margin: 0 10rpx;
}

.link:active {
  opacity: 0.8;
}