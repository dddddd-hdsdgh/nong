.history-container {
  padding: 24rpx;
  min-height: 100vh;
  background: #f5f7f2;
  box-sizing: border-box;
}

.page-header {
  margin-bottom: 24rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  display: block;
}

.page-subtitle {
  font-size: 26rpx;
  color: #777;
  margin-top: 8rpx;
}

.placeholder-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  text-align: center;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.05);
}

.placeholder-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.placeholder-desc {
  font-size: 26rpx;
  color: #999;
  display: block;
  margin-bottom: 20rpx;
}

.placeholder-error .placeholder-title {
  color: #d9534f;
}

.primary-btn {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: #fff;
  border: none;
  border-radius: 999rpx;
  padding: 0 40rpx;
}

.secondary-btn {
  background: #fff;
  color: #4CAF50;
  border: 1rpx solid #4CAF50;
  border-radius: 999rpx;
  padding: 0 40rpx;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.task-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 14rpx rgba(0, 0, 0, 0.04);
}

.task-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.task-status {
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(3, 169, 244, 0.15);
  color: #0277bd;
}

.status-completed {
  background: rgba(76, 175, 80, 0.15);
  color: #2e7d32;
}

.status-processing {
  background: rgba(255, 193, 7, 0.2);
  color: #a26800;
}

.status-pending {
  background: rgba(3, 169, 244, 0.18);
  color: #0277bd;
}

.status-failed {
  background: rgba(244, 67, 54, 0.18);
  color: #c62828;
}

.task-time {
  font-size: 24rpx;
  color: #999;
}

.task-summary {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.task-meta {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.task-meta-item {
  font-size: 24rpx;
  color: #888;
}

.load-more,
.list-footer {
  text-align: center;
}

.loading-inline {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  color: #999;
  font-size: 26rpx;
}

.loading-spinner,
.loading-spinner-small {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(0, 0, 0, 0.08);
  border-top-color: #4CAF50;
  animation: spin 1s linear infinite;
  margin: 0 auto;
}

.loading-spinner-small {
  width: 36rpx;
  height: 36rpx;
  border-width: 4rpx;
}

.footer-text {
  font-size: 24rpx;
  color: #bbb;
  margin-top: 12rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

