/* 知识库页面样式 */
.knowledge-container {
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 页面头部 */
.header {
  background: linear-gradient(135deg, #1AAD19 0%, #4CAF50 100%);
  padding: 20px 16px 24px;
  color: white;
}

.title-section {
  margin-bottom: 16px;
}

.page-title {
  display: block;
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 4px;
}

.page-subtitle {
  display: block;
  font-size: 14px;
  opacity: 0.9;
}

/* 搜索框 */
.search-section {
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 20px;
  padding: 12px 16px;
  display: flex;
  align-items: center;
  backdrop-filter: blur(10px);
}

.search-icon {
  width: 16px;
  height: 16px;
  margin-right: 8px;
  opacity: 0.8;
}

.search-placeholder {
  font-size: 14px;
  opacity: 0.8;
}

/* 加载状态 */
.loading-section {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 200px;
}

.loading-content {
  text-align: center;
}

.loading-spinner {
  width: 32px;
  height: 32px;
  border: 3px solid #e0e0e0;
  border-top: 3px solid #1AAD19;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 12px;
}

.loading-text {
  font-size: 14px;
  color: #666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 内容区域 */
.content {
  padding: 0 16px 20px;
}

/* 分类区域 */
.category-section {
  margin-top: 20px;
}

.section-header {
  margin-bottom: 16px;
}

.section-title {
  display: block;
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 4px;
}

.section-subtitle {
  display: block;
  font-size: 12px;
  color: #999;
}

/* 分类网格 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16px;
  margin-bottom: 20px;
}

.category-item {
  background-color: white;
  border-radius: 12px;
  padding: 20px 12px 16px;
  text-align: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.category-item:active {
  transform: translateY(2px);
  box-shadow: 0 4px 12px rgba(26, 173, 25, 0.2);
}

.category-icon-container {
  margin-bottom: 12px;
}

.category-icon {
  width: 40px;
  height: 40px;
}

.category-name {
  display: block;
  font-size: 14px;
  font-weight: bold;
  color: #333;
  margin-bottom: 4px;
}

.category-count {
  display: block;
  font-size: 12px;
  color: #999;
}

/* 热门知识 */
.hot-knowledge-section {
  margin-top: 24px;
}

.knowledge-list {
  background-color: white;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.knowledge-item {
  display: flex;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid #f0f0f0;
  transition: background-color 0.2s ease;
}

.knowledge-item:last-child {
  border-bottom: none;
}

.knowledge-item:active {
  background-color: #f8f8f8;
}

.knowledge-content {
  flex: 1;
  margin-right: 12px;
}

.knowledge-title {
  display: block;
  font-size: 15px;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.knowledge-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.knowledge-category {
  font-size: 12px;
  color: #1AAD19;
  background-color: rgba(26, 173, 25, 0.1);
  padding: 2px 8px;
  border-radius: 10px;
}

.knowledge-stats {
  display: flex;
  align-items: center;
  gap: 12px;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 4px;
}

.stat-icon {
  width: 12px;
  height: 12px;
  opacity: 0.6;
}

.stat-text {
  font-size: 12px;
  color: #999;
}

/* 收藏按钮 */
.collect-btn {
  padding: 8px;
  border-radius: 50%;
  transition: background-color 0.2s ease;
}

.collect-btn:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.collect-icon {
  width: 20px;
  height: 20px;
}

/* 底部提示 */
.footer-tip {
  text-align: center;
  padding: 20px 0;
}

.tip-text {
  font-size: 12px;
  color: #999;
}

/* 响应式适配 */
@media (max-width: 320px) {
  .category-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }
  
  .category-item {
    padding: 16px 8px 12px;
  }
  
  .category-icon {
    width: 32px;
    height: 32px;
  }
  
  .category-name {
    font-size: 13px;
  }
}