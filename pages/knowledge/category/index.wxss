/* pages/knowledge/category/index.wxss */

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  height: 80vh;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* 错误状态样式 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  text-align: center;
  height: 80vh;
}

.error-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.error-text {
  color: #666;
  font-size: 30rpx;
  margin-bottom: 40rpx;
}

.retry-btn {
  background-color: #4CAF50;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 0;
  width: 200rpx;
  height: 80rpx;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  height: 60vh;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  color: #999;
  font-size: 30rpx;
}

/* 文章列表 */
.article-list {
  background-color: #f8f8f8;
  min-height: 100vh;
}

.article-item {
  background-color: white;
  margin-bottom: 20rpx;
  padding: 30rpx;
  border-bottom: 2rpx solid #eee;
}

.article-content {
  display: flex;
  margin-bottom: 20rpx;
}

.article-info {
  flex: 1;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.article-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.article-summary {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.article-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.author,
.date,
.view-count {
  font-size: 24rpx;
}

.dot {
  margin: 0 10rpx;
}

.article-cover {
  width: 200rpx;
  height: 140rpx;
  border-radius: 8rpx;
  background-color: #f0f0f0;
  flex-shrink: 0;
}

/* 操作栏 */
.article-action {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.action-text {
  font-size: 26rpx;
  color: #666;
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.loading-small-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 15rpx;
}

.load-more-text {
  color: #999;
  font-size: 26rpx;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 30rpx 0;
}

.no-more-text {
  color: #999;
  font-size: 26rpx;
}