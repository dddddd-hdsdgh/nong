/* pages/knowledge/detail/index.wxss */

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  height: 80vh;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* 错误状态样式 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  text-align: center;
  height: 80vh;
}

.error-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.error-text {
  color: #666;
  font-size: 30rpx;
  margin-bottom: 40rpx;
}

.retry-btn {
  background-color: #4CAF50;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 0;
  width: 200rpx;
  height: 80rpx;
}

/* 文章容器 */
.article-container {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 文章头部 */
.article-header {
  background-color: white;
  padding: 30rpx;
  border-bottom: 2rpx solid #eee;
}

.article-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.article-meta {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999;
}

.author,
.date {
  font-size: 26rpx;
}

.dot {
  margin: 0 10rpx;
}

.category-tag {
  background-color: #e8f5e9;
  color: #4CAF50;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
}

/* 文章封面 */
.article-cover {
  width: 100%;
  height: 400rpx;
  background-color: #f0f0f0;
}

/* 文章内容 */
.article-content {
  background-color: white;
  padding: 30rpx;
  margin-top: 20rpx;
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
}

.article-content rich-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
}

/* 统计信息 */
.article-stats {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
  margin-top: 20rpx;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #eee;
  border-top: 2rpx solid #eee;
}

.stat-item {
  display: flex;
  align-items: center;
  margin: 0 40rpx;
}

.stat-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.stat-text {
  font-size: 28rpx;
  color: #666;
}

/* 操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background-color: white;
  padding: 20rpx;
  border-top: 2rpx solid #eee;
  z-index: 100;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: transparent;
  padding: 10rpx 0;
  color: #666;
  font-size: 24rpx;
  margin: 0;
  border: none;
}

.favorite-btn.favorited {
  color: #ff4757;
}

.action-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 24rpx;
}

/* 相关推荐 */
.recommended-section {
  background-color: white;
  margin-top: 20rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}

.recommended-list {
  display: flex;
  flex-direction: column;
}

.recommended-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.recommended-item:last-child {
  border-bottom: none;
}

.recommended-info {
  flex: 1;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.recommended-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.recommended-meta {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.recommended-cover {
  width: 160rpx;
  height: 110rpx;
  border-radius: 8rpx;
  background-color: #f0f0f0;
}

/* 富文本样式 */
rich-text p {
  margin-bottom: 20rpx;
  line-height: 1.8;
}

rich-text h1, rich-text h2, rich-text h3 {
  margin: 30rpx 0 20rpx 0;
  font-weight: bold;
}

rich-text h1 {
  font-size: 36rpx;
}

rich-text h2 {
  font-size: 34rpx;
}

rich-text h3 {
  font-size: 32rpx;
}

rich-text ul, rich-text ol {
  margin: 20rpx 0;
  padding-left: 40rpx;
}

rich-text li {
  margin: 10rpx 0;
  line-height: 1.6;
}

rich-text img {
  max-width: 100%;
  height: auto;
  margin: 20rpx 0;
}