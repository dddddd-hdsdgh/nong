.result-container {
  width: 100%;
  padding: 30rpx;
  background-color: #F9F9F9;
  border-radius: 24rpx;
  margin-top: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

.result-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 44rpx;
}

.result-image {
  width: 100%;
  height: 340rpx;
  border-radius: 20rpx;
  object-fit: cover;
  margin-bottom: 20rpx;
}

.task-status-card {
  width: 100%;
  padding: 24rpx 28rpx;
  border-radius: 24rpx;
  background-color: #F6FBF6;
  border: 1rpx solid #DDEBDD;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.status-label {
  font-size: 28rpx;
  color: #666666;
}

.status-value {
  font-size: 30rpx;
  font-weight: 600;
  color: #4CAF50;
}

.status-value.status-pending {
  color: #FF9800;
}

.status-value.status-processing {
  color: #FF9800;
}

.status-value.status-completed {
  color: #2E7D32;
}

.status-value.status-failed {
  color: #E53935;
}

.status-meta {
  font-size: 26rpx;
  color: #666666;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.status-desc {
  color: #333333;
}

.status-progress {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 16rpx;
}

.status-progress.failed {
  color: #E53935;
}

.status-progress .loading-spinner {
  margin: 0;
  width: 32rpx;
  height: 32rpx;
}

.status-text {
  font-size: 26rpx;
  color: #555555;
}

.preview-image.slim {
  margin-top: 20rpx;
  height: 260rpx;
  width: 100%;
  border-radius: 20rpx;
  object-fit: cover;
}

.chip-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin: 20rpx 0;
}

.chip {
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  background-color: #E8F5E9;
  color: #2E7D32;
  font-size: 24rpx;
}

.result-section {
  margin-top: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.description {
  font-size: 26rpx;
  color: #444444;
  line-height: 40rpx;
}

.bullet-line {
  display: flex;
  gap: 12rpx;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.bullet {
  color: #4CAF50;
  font-size: 32rpx;
  line-height: 36rpx;
}

.kv-row {
  display: flex;
  gap: 20rpx;
  padding: 12rpx 0;
  border-top: 1rpx solid #E0E0E0;
  font-size: 26rpx;
}

.kv-row:first-child {
  border-top: none;
}

.kv-key {
  width: 180rpx;
  color: #777777;
}

.kv-value {
  flex: 1;
  color: #333333;
  word-break: break-all;
}

.json-block {
  background: #1E1E1E;
  color: #D4D4D4;
  font-family: 'Fira Code', 'Consolas', monospace;
  font-size: 24rpx;
  padding: 20rpx;
  border-radius: 18rpx;
  white-space: pre-wrap;
  word-break: break-all;
}

.result-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 30rpx;
}

.result-actions button {
  width: 100%;
  border-radius: 16rpx;
}