.header {
  text-align: center;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  gap: 30rpx;
  width: 100%;
  overflow-y: auto;
  padding-bottom: 40rpx;
}

